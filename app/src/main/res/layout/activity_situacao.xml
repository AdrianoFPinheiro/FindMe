<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SituacaoActivity">

    <EditText
            android:id="@+id/etSituacao"
                        android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/shape"
            android:gravity="start"
            android:maxLines="10"
            android:layout_marginTop="8dp"
            android:fontFamily=""
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

    <Button
            android:id="@+id/btFinalizarVisita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finalizar_visita"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/custom_button"
            android:textAllCaps="false" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etSituacao" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>